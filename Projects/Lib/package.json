{
    "name": "scheduleone-insights-lib",
    "version": "1.0.0",
    "description": "Library for Schedule1 game calculations and insights",
    "type": "module",
    "main": "./dist/index.cjs.js",
    "module": "./dist/index.es.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.es.js",
            "require": "./dist/index.cjs.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "typecheck": "tsc --project tsconfig.dev.json",
        "build": "vite build",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write .",
        "prepublishOnly": "pnpm run typecheck && pnpm run lint && pnpm run test && pnpm run build"
    },
    "keywords": [
        "schedule1",
        "game",
        "calculator",
        "mixer",
        "insights",
        "library",
        "typescript"
    ],
    "author": "Neonsy",
    "license": "MIT",
    "packageManager": "pnpm@10.8.1",
    "devDependencies": {
        "@eslint/js": "^9.25.0",
        "@types/node": "^22.14.1",
        "@typescript-eslint/eslint-plugin": "^8.30.1",
        "@typescript-eslint/parser": "^8.30.1",
        "eslint": "^9.24.0",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-prettier": "^5.2.6",
        "prettier": "^3.5.3",
        "ts-morph": "^25.0.1",
        "tsx": "^4.19.3",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.30.1",
        "vite": "^6.3.5",
        "vite-plugin-dts": "^4.5.3",
        "vitest": "^3.1.1"
    }
}
